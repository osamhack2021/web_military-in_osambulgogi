generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  group_id   Int
  username   String    @unique
  password   String
  nickname   String
  class      String?
  phone      String?
  email      String?
  admin_type AdminType
}

enum AdminType {
  NONE
  ADMIN
  SUPER_ADMIN
}
